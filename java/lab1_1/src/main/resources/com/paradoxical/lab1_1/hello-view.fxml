<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="194.0" prefWidth="188.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.paradoxical.lab1_1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextField fx:id="input1" />
      <TextField fx:id="input2">
         <VBox.margin>
            <Insets top="-15.0" />
         </VBox.margin>
      </TextField>
      <FlowPane alignment="CENTER" hgap="5.0" prefHeight="200.0" prefWidth="200.0" rowValignment="TOP">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#addClicked" text="+" />
